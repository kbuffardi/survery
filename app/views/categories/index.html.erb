
<div class="progress">
  <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 1.5em;">
<span style="margin-left: 10px; color: rgb(50,50,50); font-size: 10px">PROGRESS&nbsp;BAR</span>
  </div>
</div>

<div class="vert-space-sm"> </div>

<center><h3>Please read through the following food categories and foods</h3><br></center>

<div class="vert-space-lg"></div>

<% @categories.each do |category| %>
    <div class="col-md-3  style="">
    <div style="font-size: 1.2em; margin-bottom: 8px"><%= category.name %></div>
</div>
<% end %>

<div class="vert-space-lg"></div>
<div class="vert-space-lg"></div>

  <% @categories.each do |category| %>
      <div class="col-md-12" style="">
      <div style="font-size: 1.2em; margin-bottom: 8px"><%= category.name %></div>

      <div class="col-md-offset-1">
      <% category.foods.each_with_index do |food, i| %>
      <div class="col-md-3">

        <%= food.name %>
      </div>

      <% end %>
      </div>
      <div class="vert-space-lg"></div>
      </div>
  <% end %>

<hr>
