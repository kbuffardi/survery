<div class="progress">
  <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="<%= 20 + (@q_num * 3.1) %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= 20 + (@q_num * 3.1) %>%">
    <span class="sr-only"><%= 20 + (@q_num * 3.1) %>% Complete (success)</span>
  </div>
</div>

<h3>VAS Questions </h3>

<hr>

  <%= @question.prompt_left %> <% %> <%= @question.prompt_right %>

  <hr>

  <%= form_for @answer do |answer| %>

    <% @foods.each do |food| %>

    <%= food.name %>
      <%= range_field :vas_answers, :value, min: 1, max: 500, step: 1, class: 'not-clicked' %>

      <hr>

      <% end %>

      <%= answer.submit 'Next', :class => 'btn btn-primary' %>

  <% end %>




<hr>

<script>
$('.not-clicked').click(function(e){
  $(this).removeClass('not-clicked');
  $(this).addClass('clicked');
});
</script>
