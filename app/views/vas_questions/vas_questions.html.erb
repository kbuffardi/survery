<div class="progress">
  <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="<%= 20 + (@q_num * 3) %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= 20 + (@q_num * 3) %>%">
    <span class="progress-text"><%= 15 + (@q_num * 2.8).to_i %>% Complete</span>
  </div>
</div>

<div class="vert-space-sm"> </div>

<center><h3>For each of the following questions, please click and then hold to slide anywhere on the line </h3></center>

<div class="vert-space-lg"> </div>

<%= form_for @answer do |f| %>

<% @foods.each do |food| %>

  <h4 class="col-md-offset-1 col-md-10" style="font-size: 1.15em; line-height: 1.6em; clear: both;">
  <%= @question.prompt_left %><strong><span style="font-size: 1.1em"><%= food.name %></span></strong><% if @q_num == 14 %>
                                                                                                       or eating less <%= food.name %>
                                                                                                      <% elsif @q_num == 3 || @q_num == 5 || @q_num == 15 %>
                                                                                                        I eat <%= food.name %>
                                                                                                      <% elsif @q_num == 10 %>, I will go out of my way to get <%= food.name %> <!-- do not format, becuase of html space for "," -->
                                                                                                      <% elsif @q_num == 16 %>, I have eaten <%= food.name %>
                                                                                                      <% elsif @q_num == 20 %>, I need to increase how much <%= food.name %>
                                                                                                      <% end %><%= @question.prompt_right %>
                                                                                                      <% if @q_num == 2 %>
                                                                                                        &nbsp;_____&nbsp; <%= food.unit %>
                                                                                                      <% end %>
                                                                                                    </h4>

    <center><div class="slider-fill">

    <%= f.range_field :vas_values, min: 1, max: 500, step: 1, class: 'not-clicked', :multiple => true %>

    <%= f.hidden_field :user_ids, :multiple => true, :value => current_user.id %>
    <%= f.hidden_field :question_ids, :multiple => true, :value => @q_num %>
    <%= f.hidden_field :survey_ids, :multiple => true, :value => @survey.id %>
    <%= f.hidden_field :food_ids, :multiple => true, :value => food.id %>

<% if @q_num == 3 || @q_num == 5 || @q_num == 6 || @q_num == 7 || @q_num == 8 || @q_num == 9 ||
                  @q_num == 11 || @q_num == 12 || @q_num == 17 || @q_num == 18 || @q_num == 19 || @q_num == 21 ||
                  @q_num == 22 || @q_num == 23 || @q_num == 24 || @q_num == 15 || @q_num == 16 || @q_num == 20 %>

                  <div class="slider-ticks" id="slider-5tick1"> </div>
                  <div class="slider-ticks" id="slider-5tick2"> </div>
                  <div class="slider-ticks" id="slider-5tick3"> </div>
                  <div class="slider-ticks" id="slider-5tick4"> </div>

                  <div class="slider-ticks-text" id="slider-5tick-text1"> Never </div>
                  <div class="slider-ticks-text" id="slider-5tick-text2"> Rarely </div>
                  <div class="slider-ticks-text" id="slider-5tick-text3"> Sometimes </div>
                  <div class="slider-ticks-text" id="slider-5tick-text4"> Almost every time </div>
                  <div class="slider-ticks-text" id="slider-5tick-text5"> Every time </div>

<% else %>

      <div class="slider-ticks" id="slider-tick1"> </div>
      <div class="slider-ticks" id="slider-tick2"> </div>
      <div class="slider-ticks" id="slider-tick3"> </div>
      <div class="slider-ticks" id="slider-tick4"> </div>
      <div class="slider-ticks" id="slider-tick5"> </div>

      <div class="slider-ticks-text" id="slider-tick-text1">  <% if @q_num == 2 %>                    0
                                                              <% elsif @q_num == 4 %> Agree
                                                              <% else %>                              Never
                                                              <% end %></div>
      <div class="slider-ticks-text" id="slider-tick-text2">  <% if @q_num == 2 %>                    1/4
                                                              <% elsif @q_num == 4 %>
                                                              <% else %>                              Once a year
                                                              <% end %> </div>
      <div class="slider-ticks-text" id="slider-tick-text3">  <% if @q_num == 2 %>                    1/2
                                                              <% elsif @q_num == 4 %>
                                                              <% else %>                              Once a month
                                                              <% end %></div>
      <div class="slider-ticks-text" id="slider-tick-text4">  <% if @q_num == 2 %>                    3/4
                                                              <% elsif @q_num == 4  %>
                                                              <% else %>                              Once a week
                                                              <% end %></div>
      <div class="slider-ticks-text" id="slider-tick-text5">  <% if @q_num == 2 %>                    1
                                                              <% elsif @q_num == 4 %>
                                                              <% else %>                              Once a day
                                                              <% end %></div>
      <div class="slider-ticks-text" id="slider-tick-text6">  <% if @q_num == 2 %>                    More than one
                                                              <% elsif @q_num == 4 %> Disagree
                                                              <% else %>                              More than once a day
                                                              <% end %></div>
<% end %>

</div></center>

<div class="vert-space-lg"> </div>
<div class="vert-space-sm"> </div>
    <% end %>
<div class="vert-space-sm"> </div>

      <% if @q_num == 1 %> <div class="col-md-offset-1 col-md-6 isa_warning" style="margin-top: 0px;"> <div class="fa fa-info-circle"> </div>
        <i>Pressing the <b>Back</b> button in your browser on this page may cause an error (cannot re-pick) and you may have to start over by making a new account.</i></div>
        <% end %>
<% if @q_num == 1 %>
  <%= f.submit 'Next', :class => 'col-md-offset-2 btn-lg btn btn-primary btn-surv', :disabled => true %>
<% else %>
  <%= f.submit 'Next', :class => 'col-md-offset-9 btn-lg btn btn-primary btn-surv', :disabled => true %>
<% end %>

  <% end %>

<div class="vert-space-lg"> </div>


<script>
$('.not-clicked').click(function(e) {
  $(this).removeClass('not-clicked');
  $(this).addClass('clicked');

  if ($('.not-clicked').length == 0) {
   var nextBtn = document.getElementsByName("commit")[0];
   nextBtn.removeAttribute('disabled');
  }
});
</script>
